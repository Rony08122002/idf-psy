
import React from "react";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import { CheckCircle, MessageCircle, Clock, Heart, ArrowRight } from "lucide-react";
import { createPageUrl } from "@/utils";

export default function ConversationSummary({ 
  assessment, 
  moodScore, 
  duration, 
  onNewConversation 
}) {
  const getMoodBadgeVariant = (category) => {
    if (category === 'positive') return 'default';
    if (category === 'negative') return 'destructive';
    return 'secondary';
  };

  const getStressBadgeVariant = (level) => {
    if (level === 'high') return 'destructive';
    if (level === 'medium') return 'secondary';
    return 'outline';
  };

  const getMoodCategoryText = (category) => {
    if (category === 'positive') return 'חיובי';
    if (category === 'negative') return 'שלילי';
    return 'ניטרלי';
  };

  const getStressLevelText = (level) => {
    if (level === 'high') return 'גבוה';
    if (level === 'medium') return 'בינוני';
    return 'נמוך';
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 p-4 md:p-8 flex items-center justify-center" dir="rtl">
      <div className="max-w-2xl mx-auto">
        
        {/* Success Header */}
        <div className="text-center mb-8">
          <div className="w-16 h-16 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <CheckCircle className="w-8 h-8 text-white" />
          </div>
          <h1 className="text-3xl font-bold text-gray-900 mb-2">
            הצ'ק-אין הושלם!
          </h1>
          <p className="text-gray-600">
            תודה על כך שאתה דואג לבריאות הנפש שלך היום
          </p>
        </div>

        {/* Assessment Summary */}
        <Card className="border-none shadow-xl bg-white/90 backdrop-blur-sm mb-6">
          <CardHeader>
            <CardTitle className="text-xl text-center">סיכום המפגש שלך</CardTitle>
          </CardHeader>
          <CardContent className="space-y-6">
            
            {/* Stats Grid */}
            <div className="grid grid-cols-3 gap-4 text-center">
              <div className="p-4 bg-blue-50 rounded-lg">
                <Heart className="w-8 h-8 text-blue-600 mx-auto mb-2" />
                <p className="text-2xl font-bold text-blue-600">{moodScore}/10</p>
                <p className="text-sm text-gray-600">ציון מצב רוח</p>
              </div>
              <div className="p-4 bg-purple-50 rounded-lg">
                <Clock className="w-8 h-8 text-purple-600 mx-auto mb-2" />
                <p className="text-2xl font-bold text-purple-600">{duration} דק'</p>
                <p className="text-sm text-gray-600">משך זמן</p>
              </div>
              <div className="p-4 bg-green-50 rounded-lg">
                <MessageCircle className="w-8 h-8 text-green-600 mx-auto mb-2" />
                <p className="text-2xl font-bold text-green-600">✓</p>
                <p className="text-sm text-gray-600">הושלם</p>
              </div>
            </div>

            {/* Assessment Results */}
            {assessment && (
              <div className="space-y-4">
                <div className="flex items-center justify-center gap-4">
                  <Badge variant={getMoodBadgeVariant(assessment.mood_category)}>
                    מצב רוח {getMoodCategoryText(assessment.mood_category)}
                  </Badge>
                  <Badge variant={getStressBadgeVariant(assessment.stress_level)}>
                    מתח {getStressLevelText(assessment.stress_level)}
                  </Badge>
                </div>

                {assessment.sentiment_analysis && (
                  <div className="bg-gray-50 p-4 rounded-lg">
                    <h3 className="font-semibold mb-2 text-gray-900">הערות הערכה</h3>
                    <p className="text-sm text-gray-700">{assessment.sentiment_analysis}</p>
                  </div>
                )}

                {assessment.recommendations && assessment.recommendations.length > 0 && (
                  <div className="bg-blue-50 p-4 rounded-lg">
                    <h3 className="font-semibold mb-3 text-blue-900">המלצות אישיות</h3>
                    <ul className="space-y-2">
                      {assessment.recommendations.map((rec, index) => (
                        <li key={index} className="flex items-start gap-2 text-sm text-blue-800">
                          <ArrowRight className="w-4 h-4 mt-0.5 text-blue-600 shrink-0" />
                          <span>{rec}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                )}
              </div>
            )}

            {/* Professional Help Section */}
            {assessment?.stress_level === 'high' && (
              <div className="bg-orange-50 border border-orange-200 p-4 rounded-lg">
                <h3 className="font-semibold text-orange-900 mb-2">
                  שקול תמיכה מקצועית
                </h3>
                <p className="text-sm text-orange-800 mb-3">
                  בהתבסס על השיחה הזו, ייתכן שיהיה מועיל לדבר עם איש מקצוע בבריאות הנפש.
                </p>
                <Button variant="outline" size="sm" className="border-orange-300 text-orange-700 hover:bg-orange-100">
                  שתף דוח עם יועץ
                </Button>
              </div>
            )}

            {/* Action Buttons */}
            <div className="flex gap-3 pt-4">
              <Button
                onClick={onNewConversation}
                className="flex-1 bg-blue-600 hover:bg-blue-700"
              >
                חזור לדשבורד
              </Button>
              <Button
                variant="outline"
                onClick={() => window.location.href = createPageUrl("Resources")}
                className="flex-1"
              >
                צפה במשאבים
              </Button>
            </div>
          </CardContent>
        </Card>

        {/* Encouragement */}
        <div className="text-center">
          <p className="text-gray-600 text-sm">
            זכור: לבקש תמיכה זה סימן של כוח. אתה נוקט צעדים חיוביים לבריאות הנפש שלך.
          </p>
        </div>
      </div>
    </div>
  );
}
